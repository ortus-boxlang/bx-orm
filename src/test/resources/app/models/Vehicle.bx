class entityName="Vehicle" table="vehicles" persistent="true" {

    property 
        name="vin" 
        type="string" 
        fieldtype="id" 
        ormtype="string" 
        generator="assigned";
        
    property 
        name="make" 
        type="string";

    property 
        name="model" 
        type="string";

    property 
        name="features" 
        type="string";

    property 
        name="manufacturer" 
        fieldtype="one-to-one"
        cfc="Manufacturer"
        fkcolumn="FK_manufacturer"
        lazy="false";

    property name="eventLog" type="array" persistent="false";

    function init(){
        eventLog = [];
        return this;
    }

    function preLoad(){
        getEventLog().append( "preLoad" );
    }
    function postLoad(){
        getEventLog().append( "postLoad" );
    }

    function preInsert(){
        getEventLog().append( "preInsert" );
    }
    function postInsert(){
        getEventLog().append( "postInsert" );
    }

    function preUpdate(){
        getEventLog().append( "preUpdate" );
    }
    function postUpdate(){
        getEventLog().append( "postUpdate" );
    }

    function preDelete(){
        getEventLog().append( "preDelete" );
    }
    function postDelete(){
        getEventLog().append( "postDelete" );
    }
}