/**
 * Test Page!
 */
class
	persistent        ="true"
	entityname        ="cbPage"
	table             ="cb_page"
	batchsize         ="25"
	cachename         ="cbPage"
	cacheuse          ="read-write"
	extends           ="BaseContent"
	joinColumn        ="contentID"
	discriminatorValue="Page"
{

	/* *********************************************************************
	 **							PROPERTIES
	 ********************************************************************* */

	/**
	 * The layout in a theme that will be used to render the page out
	 */
	property
		name   ="layout"
		column ="layout"
		notnull="false"
		length ="200"
		default="";

	/**
	 * The ordering numeric sequence
	 */
	property
		name   ="order"
		column ="order"
		notnull="false"
		ormtype="integer"
		default="0";

	/**
	 * If true, this page is used when building automated menus. Else it is ignored.
	 */
	property
		name   ="showInMenu"
		column ="showInMenu"
		notnull="true"
		ormtype="boolean"
		default="true"
		index  ="idx_showInMenu";

	/**
	 * The excerpt for this page. This can be empty.
	 */
	property
		name   ="excerpt"
		column ="excerpt"
		notnull="false"
		ormtype="text"
		default=""
		length ="8000";

}
